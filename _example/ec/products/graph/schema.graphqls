extend schema
  @link(url: "https://specs.apollo.dev/federation/v2.0",
        import: ["@key", "@shareable", "@inaccessible", "@tag"])

type Query {
  product(id: ID!): Product
}

type Mutation {
  createProduct(name: String!, price: Int!): Product
}

type Product @key(fields: "id") {
  id: ID!
  name: String! @shareable @tag(name: "public")
  price: Int! @shareable @tag(name: "public") @tag(name: "partner")
  weight: Float! @shareable
  internalCode: String! @inaccessible
}
