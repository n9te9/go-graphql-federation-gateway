extend schema
  @link(url: "https://specs.apollo.dev/federation/v2.0",
        import: ["@key", "@external", "@shareable"])

type Account @key(fields: "iban") {
  iban: ID!
  id: ID!
  balance: Int! @shareable
  customer: Customer!
}

extend type Customer @key(fields: "id") {
  id: ID! @external
  tier: String! @external
  accounts: [Account!]!
}

type Query {
  account(iban: ID!): Account
}
